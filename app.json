{
  "expo": {
    "name": "gesture-air-launcher",
    "slug": "gesture-air-launcher",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gestureairlauncher",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow gesAir to listen briefly to recognize songs and play them in Spotify."
      }
    },
    "android": {
      "package": "com.gesair.launcher",
      "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "./plugins/with-android-float-service.js",
      "./plugins/with-acrcloud-native.js"
    ],
    "extra": {
      "AUDD_API_TOKEN": "",
      "ACR_HOST": "",
      "ACR_ACCESS_KEY": "",
      "ACR_ACCESS_SECRET": "",
      "ACR_PROXY_URL": "",
      "ACR_BEARER": ""
      ,
      "ACOUSTID_PROXY_URL": ""
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
